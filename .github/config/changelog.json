{
  "categories": [
      {
          "title": "## 🚀 Features",
          "labels": ["feat"]
      },
      {
          "title": "## 🐛 Fixes",
          "labels": ["fix"]
      },
      {
          "title": "## 🧪 Tests",
          "labels": ["test"]
      },
      {
          "title": "## 📚 Documentation",
          "labels": ["docs"]
      },
      {
          "title": "## 🔍 Refactor",
          "labels": ["refactor", "ref"]
      },
      {
          "title": "## ⚡ Performance",
          "labels": ["perf"]
      },
      {
          "title": "## 🔥 Hotfixes",
          "labels": ["hotfix"]
      },
      {
          "title": "## 🔄 Reverts",
          "labels": ["revert"]
      },
      {
          "title": "## 📦 Database",
          "labels": ["database"]
      },
      {
          "title": "## 💬 Other",
          "labels": []
      }
  ],
  "template": "#{{CHANGELOG}}",
  "label_extractor": [
      {
          "pattern": "^(feat|fix|test|docs|refactor|ref|perf|hotfix|revert|database){1}(\\([\\w\\-\\.]+\\))?(!)?: ([\\w ])+([\\s\\S]*)",
          "target": "$1",
          "flags": "gu"
      }
  ],
  "ignore_labels": ["ignore"],
  "base_branches": ["master"]
}